<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Regla para reescribir URLs a index.php -->
                <rule name="Rewrite to index" stopProcessing="true">
                    <match url="^(.*)$" ignoreCase="true" />
                    <conditions logicalGrouping="MatchAll">
                        <!-- No reescribir si el archivo existe -->
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <!-- No reescribir si el directorio existe -->
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <!-- âœ… REWRITE (no Redirect) mantiene la URL original -->
                    <action type="Rewrite" url="index.php" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
        
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
            </files>
        </defaultDocument>
        
        <handlers>
            <remove name="php" />
            <add name="PHPExecutable" path="*.php" verb="*" modules="FastCgiModule" scriptProcessor="C:\Program Files\php-8.3.28-Win32-vs16-x64\php-cgi.exe" resourceType="Either" requireAccess="Script" />
        </handlers>
        <httpErrors>
            <remove statusCode="403" subStatusCode="-1" />
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404" path="/error404" responseMode="ExecuteURL" />
        </httpErrors>

        
    </system.webServer>
</configuration>